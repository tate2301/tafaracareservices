---
import Layout from '../layouts/Layout.astro';

const features = [
  {
    title: "Smart Compliance Dashboard",
    description: "Track and manage all your certifications, training records, and regulatory requirements in one intuitive platform. Stay ahead of mandatory training requirements!",
    icon: "ðŸ“Š",
    bgColor: "bg-purple-50"
  },
  {
    title: "Real-time CQC Updates",
    description: "Never miss a beat with instant notifications about Care Quality Commission requirements. We keep you informed about the latest healthcare regulations.",
    icon: "ðŸ””",
    bgColor: "bg-blue-50"
  },
  {
    title: "Digital Documentation",
    description: "Submit timesheets, book training sessions, and manage all your compliance documents digitally. Access everything you need, whenever you need it.",
    icon: "ðŸ“±",
    bgColor: "bg-emerald-50"
  },
  {
    title: "Dedicated Support Team",
    description: "Our team, led by our CEO Keith, is always here to help. Get personalized support and quick responses to your queries within 48 hours.",
    icon: "ðŸ‘¥",
    bgColor: "bg-amber-50"
  }
];

const testimonials = [
  {
    quote: "Working with TCS has been wonderful. They are nice and faithful to all their promises. I've been sending people to register with them.",
    author: "Stella, Healthcare Assistant, Potters Bar",
    bgColor: "bg-purple-900"
  },
  {
    quote: "Overall very good. Pay on time, regular shifts, good communication.",
    author: "Donald, Registered Nurse, Sheffield",
    bgColor: "bg-gray-900"
  },
  {
    quote: "It has been fantastic working with Tafara Care Services.",
    author: "Rajesh, Mental Health Nurse, Newcastle",
    bgColor: "bg-teal-600"
  }
];

const partners = [
  { name: "NHS", logo: "/images/nhs-logo.svg" },
  { name: "CQC", logo: "/images/cqc-logo.svg" },
  { name: "NMC", logo: "/images/nmc-logo.svg" },
  { name: "Skills for Care", logo: "/images/skills-for-care-logo.svg" },
  { name: "ICO", logo: "/images/ico-logo.svg" }
];

const placeholderImages = {
  dashboard: "https://placehold.co/600x400/9333ea/ffffff?text=Dashboard+Preview",
  healthcareTeam: "https://placehold.co/800x600/9333ea/ffffff?text=Healthcare+Team",
  office: "https://placehold.co/800x600/9333ea/ffffff?text=Office+Location"
};
---

<Layout>
  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex justify-between items-center">
        <div class="flex items-center">
          <img src="/logo.svg" alt="Tafara Care Services" class="h-8" />
          <a href="tel:03337720624" class="ml-8 text-sm text-gray-600 hover:text-purple-900 hidden md:flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            0333 77 20624
          </a>
        </div>
        <div class="hidden md:flex space-x-8">
          <a href="#features" class="text-gray-700 hover:text-purple-900">Features</a>
          <a href="#testimonials" class="text-gray-700 hover:text-purple-900">Testimonials</a>
          <a href="#contact" class="text-gray-700 hover:text-purple-900">Contact</a>
          <a href="/login" class="text-purple-900 font-medium hover:text-purple-700">Sign In</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="relative pt-32 pb-20 bg-gradient-to-b from-purple-50/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-12 lg:gap-8">
        <div class="lg:col-span-7">
          <div class="mt-12">
            <span class="inline-block px-4 py-2 rounded-full bg-purple-100 text-purple-900 text-sm font-medium mb-6 animate-pulse">
              Join Our Growing Family of Healthcare Professionals
            </span>
            <h1 class="text-4xl font-bold text-gray-900 sm:text-5xl md:text-6xl leading-tight">
              Your Partner in Healthcare Excellence
            </h1>
            <p class="mt-6 text-xl text-gray-600 leading-relaxed">
              We're at the forefront of providing experienced Registered Nurses and Healthcare Assistants with rewarding opportunities. Join Tafara Care Services and be part of a supportive family that values your growth and success.
            </p>
            <div class="mt-8 flex flex-col sm:flex-row gap-4">
              <a href="#register" class="btn-primary group">
                Register Now
                <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
              <a href="#contact" class="btn-secondary group">
                Contact Us
                <svg class="ml-2 w-5 h-5 group-hover:rotate-12 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </a>
            </div>
            <div class="mt-8 flex items-center gap-4 text-sm text-gray-600">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                CQC Registered
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                GDPR Compliant
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                NHS Framework
              </div>
            </div>
          </div>
        </div>
        <div class="mt-12 relative lg:mt-0 lg:col-span-5">
          <div class="relative mx-auto w-full rounded-lg shadow-lg overflow-hidden transform hover:scale-[1.02] transition-transform duration-300">
            <img src={placeholderImages.dashboard} alt="Tafara compliance dashboard preview" class="w-full" />
            <div class="absolute inset-0 bg-gradient-to-t from-purple-900/20 to-transparent"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Trust Bar -->
  <div class="bg-white border-y border-gray-100">
    <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
      <p class="text-center text-sm font-medium text-gray-500 mb-8">Trusted by Leading Healthcare Institutions</p>
      <div class="grid grid-cols-2 gap-8 md:grid-cols-5">
        {partners.map(partner => (
          <div class="col-span-1 flex justify-center items-center">
            <img class="h-12 object-contain filter hover:brightness-75 transition-all" src={partner.logo} alt={partner.name} />
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <section id="features" class="py-20 bg-white scroll-mt-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl mb-4">
          Everything You Need to Succeed
        </h2>
        <p class="text-xl text-gray-600">
          From seamless compliance management to dedicated support, we've got you covered every step of the way.
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-16">
        {features.map(feature => (
          <div class={`p-8 rounded-xl ${feature.bgColor} hover:scale-[1.02] transition-all duration-300 cursor-pointer group`}>
            <div class="text-3xl mb-4 ">{feature.icon}</div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {feature.title}
            </h3>
            <p class="text-gray-600 leading-relaxed">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Quick Actions -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <a href="#timesheet" class="group p-6 bg-white rounded-xl shadow-sm hover:shadow-md transition-all">
          <h3 class="text-lg font-semibold text-gray-900 group-hover:text-purple-900">Submit Timesheet</h3>
          <p class="mt-2 text-sm text-gray-600">Submit by Monday 10am for Friday payment</p>
        </a>
        <a href="#training" class="group p-6 bg-white rounded-xl shadow-sm hover:shadow-md transition-all">
          <h3 class="text-lg font-semibold text-gray-900 group-hover:text-purple-900">Book Training</h3>
          <p class="mt-2 text-sm text-gray-600">Stay up to date with your CPD requirements</p>
        </a>
        <a href="#availability" class="group p-6 bg-white rounded-xl shadow-sm hover:shadow-md transition-all">
          <h3 class="text-lg font-semibold text-gray-900 group-hover:text-purple-900">Update Availability</h3>
          <p class="mt-2 text-sm text-gray-600">Let us know when you're free to work</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section id="testimonials" class="py-20 bg-white scroll-mt-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center text-gray-900 sm:text-4xl mb-4">
        Hear from Our Healthcare Family
      </h2>
      <p class="text-xl text-gray-600 text-center mb-16 max-w-3xl mx-auto">
        Join thousands of healthcare professionals who've found their perfect match with Tafara Care Services.
      </p>
      <div class="grid md:grid-cols-3 gap-8">
        {testimonials.map(testimonial => (
          <div class={`p-8 rounded-xl ${testimonial.bgColor} text-white transform hover:-translate-y-1 transition-all duration-300 hover:shadow-xl`}>
            <svg class="h-8 w-8 text-white/80 mb-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
            </svg>
            <p class="text-lg mb-6 leading-relaxed">"{testimonial.quote}"</p>
            <p class="font-medium text-sm">- {testimonial.author}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-purple-900 rounded-2xl shadow-xl overflow-hidden">
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div class="p-12 lg:p-16 flex flex-col">
            <span class="inline-block px-4 py-2 w-fit rounded-full bg-purple-800 border-2 border-purple-700 text-purple-100 text-sm font-medium mb-6">
              Advance Your Healthcare Career
            </span>
            <h2 class="text-3xl font-bold text-white sm:text-4xl mb-4">
              Begin Your Journey with Tafara Care Services
            </h2>
            <p class="text-lg text-purple-100 leading-relaxed">
              Take the next step in your professional development. Join our network of skilled healthcare practitioners and benefit from:
              <ul class="mt-4 space-y-2 text-purple-100">
                <li class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-purple-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  Flexible scheduling with regular shift opportunities
                </li>
                <li class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-purple-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  Competitive remuneration packages
                </li>
                <li class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-purple-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  Comprehensive professional development
                </li>
              </ul>
            </p>
            <div class="space-y-4 mt-12">
              <a href="#register" class="inline-block w-full sm:w-auto text-center bg-white text-purple-900 px-8 py-4 rounded-lg font-medium hover:bg-purple-50 transition-all group">
                Start Registration
                <svg class="inline-block ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                </svg>
              </a>
              <p class="text-sm font-semibold text-purple-200">Professional support â€¢ Streamlined onboarding process</p>
            </div>
          </div>
          <div class="relative hidden md:block">
            <div class="absolute inset-0 bg-gradient-to-r from-purple-900/50 to-transparent z-10"></div>
            <img src={placeholderImages.healthcareTeam} alt="Healthcare professionals at work" class="object-cover h-full w-full" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-20 bg-gray-50 scroll-mt-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div class="p-12 lg:p-16">
            <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl mb-4">
              Get in Touch
            </h2>
            <p class="text-lg text-gray-600 mb-8">
              Have questions? We're here to help you take the next step in your healthcare career.
            </p>
            <div class="space-y-6">
              <div>
                <h3 class="font-semibold text-gray-900 mb-2">Visit Us</h3>
                <p class="text-gray-600">
                  2 Pinfold Street<br />
                  7th Floor<br />
                  Sheffield, S1 2GU<br />
                  United Kingdom
                </p>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-2">Contact</h3>
                <a href="tel:03337720624" class="text-purple-900 hover:text-purple-700 block">0333 77 20624</a>
                <a href="mailto:hr@tafaracareservices.com" class="text-purple-900 hover:text-purple-700">hr@tafaracareservices.com</a>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-2">Office Hours</h3>
                <p class="text-gray-600">Monday - Friday: 9:00 AM - 5:00 PM</p>
              </div>
            </div>
          </div>
          <div class="relative">
            <img src={placeholderImages.office} alt="Tafara Care Services Office" class="object-cover h-full w-full" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div>
          <img src="/logo-white.svg" alt="Tafara Care Services" class="h-8 mb-4" />
          <p class="text-gray-400">Empowering healthcare professionals across the UK with opportunities for growth and success.</p>
        </div>
        <div>
          <h3 class="font-semibold mb-4">Quick Links</h3>
          <ul class="space-y-2">
            <li><a href="#features" class="text-gray-400 hover:text-white">Features</a></li>
            <li><a href="#testimonials" class="text-gray-400 hover:text-white">Testimonials</a></li>
            <li><a href="#contact" class="text-gray-400 hover:text-white">Contact</a></li>
          </ul>
        </div>
        <div>
          <h3 class="font-semibold mb-4">Resources</h3>
          <ul class="space-y-2">
            <li><a href="#training" class="text-gray-400 hover:text-white">Training Calendar</a></li>
            <li><a href="#timesheet" class="text-gray-400 hover:text-white">Submit Timesheet</a></li>
            <li><a href="#uniform" class="text-gray-400 hover:text-white">Order Uniform</a></li>
          </ul>
        </div>
        <div>
          <h3 class="font-semibold mb-4">Legal</h3>
          <ul class="space-y-2">
            <li><a href="/privacy" class="text-gray-400 hover:text-white">Privacy Policy</a></li>
            <li><a href="/terms" class="text-gray-400 hover:text-white">Terms of Service</a></li>
            <li><a href="/gdpr" class="text-gray-400 hover:text-white">GDPR Compliance</a></li>
          </ul>
        </div>
      </div>
      <div class="mt-12 pt-8 border-t border-gray-800 text-center text-gray-400">
        <p>&copy; {new Date().getFullYear()} Tafara Care Services Ltd. All rights reserved.</p>
      </div>
    </div>
  </footer>
</Layout>
