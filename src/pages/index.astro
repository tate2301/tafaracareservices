---
import Layout from '../layouts/Layout.astro';

const features = [
  {
    title: "Smart Compliance Dashboard",
    description: "Track and manage all your certifications, training records, and regulatory requirements in one intuitive platform. Stay ahead of mandatory training requirements!",
    icon: "ðŸ“Š",
    bgColor: "bg-purple-50"
  },
  {
    title: "Real-time CQC Updates",
    description: "Never miss a beat with instant notifications about Care Quality Commission requirements. We keep you informed about the latest healthcare regulations.",
    icon: "ðŸ””",
    bgColor: "bg-blue-50"
  },
  {
    title: "Digital Documentation",
    description: "Submit timesheets, book training sessions, and manage all your compliance documents digitally. Access everything you need, whenever you need it.",
    icon: "ðŸ“±",
    bgColor: "bg-emerald-50"
  },
  {
    title: "Dedicated Support Team",
    description: "Our team, led by our CEO Keith, is always here to help. Get personalized support and quick responses to your queries within 48 hours.",
    icon: "ðŸ‘¥",
    bgColor: "bg-amber-50"
  }
];

const testimonials = [
  {
    quote: "Working with TCS has been wonderful. They are nice and faithful to all their promises. I've been sending people to register with them.",
    author: "Stella, Healthcare Assistant, Potters Bar",
    bgColor: "bg-purple-900"
  },
  {
    quote: "Overall very good. Pay on time, regular shifts, good communication.",
    author: "Donald, Registered Nurse, Sheffield",
    bgColor: "bg-gray-900"
  },
  {
    quote: "It has been fantastic working with Tafara Care Services.",
    author: "Rajesh, Mental Health Nurse, Newcastle",
    bgColor: "bg-teal-600"
  }
];

const partners = [
  { name: "NHS", logo: "/images/nhs-logo.svg" },
  { name: "CQC", logo: "/images/cqc-logo.svg" },
  { name: "NMC", logo: "/images/nmc-logo.svg" },
  { name: "Skills for Care", logo: "/images/skills-for-care-logo.svg" },
  { name: "ICO", logo: "/images/ico-logo.svg" }
];

const placeholderImages = {
  dashboard: "https://placehold.co/600x400/9333ea/ffffff?text=Dashboard+Preview",
  healthcareTeam: "https://placehold.co/800x600/9333ea/ffffff?text=Healthcare+Team",
  office: "https://placehold.co/800x600/9333ea/ffffff?text=Office+Location"
};
---

<Layout>
  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-zinc-200/60">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
      <div class="flex items-center gap-8">
        <img src="/logo.svg" alt="Tafara Care Services" class="h-8" />
        <a href="tel:03337720624" class="text-sm text-gray-600 hover:text-purple-900 hidden md:flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          0333 77 20624
        </a>
      </div>
      <div class="hidden md:flex items-center gap-8">
        <a href="#features" class="text-sm text-gray-600 hover:text-purple-900">Features</a>
        <a href="#testimonials" class="text-sm text-gray-600 hover:text-purple-900">Testimonials</a>
        <a href="#contact" class="text-sm text-gray-600 hover:text-purple-900">Contact</a>
        <a href="/login" class="inline-flex h-9 items-center justify-center rounded-md bg-purple-50 px-4 text-sm font-medium text-purple-900 hover:bg-purple-100 transition-colors">Sign In</a>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="relative pt-32 pb-24 overflow-hidden">
    <div class="absolute inset-0 bg-[url('/img/hero-pattern.svg')] bg-repeat opacity-5"></div>
    <div class="relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:grid lg:grid-cols-12 lg:gap-16">
          <div class="lg:col-span-7">
            <div class="mt-12">
              <div class="inline-flex h-8 items-center justify-center rounded-full bg-purple-50 px-4 mb-8">
                <span class="text-sm font-medium text-purple-900 tracking-tight">Join Our Growing Family of Healthcare Professionals</span>
              </div>
              <h1 class="text-4xl font-bold text-gray-900 sm:text-5xl md:text-6xl leading-tight tracking-[-0.02em] text-balance">
                Your Partner in <span class="text-purple-900">Healthcare</span> Excellence
              </h1>
              <p class="mt-8 text-xl text-gray-600 leading-relaxed text-balance max-w-2xl">
                We're at the forefront of providing experienced Registered Nurses and Healthcare Assistants with rewarding opportunities. Join Tafara Care Services and be part of a supportive family that values your growth and success.
              </p>
              <div class="mt-10 flex flex-col sm:flex-row gap-4">
                <a href="#register" class="inline-flex h-12 items-center justify-center rounded-md bg-purple-900 px-6 text-base font-medium text-white hover:bg-purple-800 transition-colors group">
                  Register Now
                  <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7"/>
                  </svg>
                </a>
                <a href="#contact" class="inline-flex h-12 items-center justify-center rounded-md bg-white px-6 text-base font-medium text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 transition-colors group">
                  Contact Us
                  <svg class="ml-2 w-5 h-5 group-hover:rotate-12 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
          <div class="mt-16 relative lg:mt-0 lg:col-span-5">
            <div class="relative mx-auto w-full rounded-2xl shadow-xl overflow-hidden">
              <div class="absolute inset-0 bg-gradient-to-br from-purple-500/20 to-blue-500/20 mix-blend-multiply"></div>
              <img src={placeholderImages.dashboard} alt="Tafara compliance dashboard preview" class="w-full" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Trust Bar -->
  <div class="border-y border-zinc-200/60">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
      <p class="text-center text-sm font-medium text-gray-600 tracking-tight mb-10">Trusted by Leading Healthcare Institutions</p>
      <div class="grid grid-cols-2 gap-8 md:grid-cols-5">
        {partners.map(partner => (
          <div class="col-span-1 flex justify-center items-center">
            <img class="h-12 object-contain opacity-80 hover:opacity-100 transition-opacity" src={partner.logo} alt={partner.name} />
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <section id="features" class="py-24 scroll-mt-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-[url('/img/features-pattern.svg')] bg-repeat opacity-5"></div>
    <div class="relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto">
          <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl tracking-[-0.02em] text-balance">
            Everything You Need to Succeed
          </h2>
          <p class="mt-6 text-xl text-gray-600 text-balance leading-relaxed">
            From seamless compliance management to dedicated support, we've got you covered every step of the way.
          </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-20">
          {features.map(feature => (
            <div class="group relative overflow-hidden rounded-xl bg-white p-8 transition-all duration-300 hover:shadow-lg border border-zinc-200/60 hover:border-zinc-300/80">
              <div class="relative h-full flex flex-col">
                <div class="mb-6 inline-flex h-14 w-14 items-center justify-center rounded-xl bg-purple-50 text-purple-900 group-hover:scale-110 transition-transform">
                  <span class="text-2xl">{feature.icon}</span>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 tracking-[-0.02em] mb-3">
                  {feature.title}
                </h3>
                <p class="text-gray-600 text-balance leading-relaxed">
                  {feature.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Actions -->
  <section class="py-24 bg-gradient-to-b from-zinc-50/50 to-white relative overflow-hidden">
    <div class="absolute inset-0 bg-[url('/img/quick-actions-pattern.svg')] bg-repeat opacity-5"></div>
    <div class="relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold text-gray-900 tracking-[-0.02em] text-balance">Quick Actions</h2>
          <p class="mt-4 text-xl text-gray-600 text-balance max-w-2xl mx-auto">Fast access to your most important tasks</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <a href="#timesheet" class="group relative overflow-hidden rounded-xl bg-white p-8 transition-all duration-300 hover:shadow-lg border border-zinc-200/60 hover:border-zinc-300/80">
            <div class="relative h-full flex flex-col">
              <div class="mb-6 inline-flex h-14 w-14 items-center justify-center rounded-xl bg-purple-50 text-purple-900 group-hover:scale-110 transition-transform">
                <svg class="h-7 w-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 tracking-[-0.02em] mb-2">Submit Timesheet</h3>
              <p class="text-gray-600 text-sm text-balance leading-relaxed">Submit by Monday 10am for Friday payment</p>
              <div class="mt-auto pt-6 flex items-center text-sm font-medium text-purple-900">
                Submit now
                <svg class="ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </div>
          </a>

          <a href="#training" class="group relative overflow-hidden rounded-xl bg-white p-8 transition-all duration-300 hover:shadow-lg border border-zinc-200/60 hover:border-zinc-300/80">
            <div class="relative h-full flex flex-col">
              <div class="mb-6 inline-flex h-14 w-14 items-center justify-center rounded-xl bg-blue-50 text-blue-900 group-hover:scale-110 transition-transform">
                <svg class="h-7 w-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 tracking-[-0.02em] mb-2">Book Training</h3>
              <p class="text-gray-600 text-sm text-balance leading-relaxed">Stay up to date with your CPD requirements</p>
              <div class="mt-auto pt-6 flex items-center text-sm font-medium text-blue-900">
                View sessions
                <svg class="ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </div>
          </a>

          <a href="#availability" class="group relative overflow-hidden rounded-xl bg-white p-8 transition-all duration-300 hover:shadow-lg border border-zinc-200/60 hover:border-zinc-300/80">
            <div class="relative h-full flex flex-col">
              <div class="mb-6 inline-flex h-14 w-14 items-center justify-center rounded-xl bg-emerald-50 text-emerald-900 group-hover:scale-110 transition-transform">
                <svg class="h-7 w-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 tracking-[-0.02em] mb-2">Update Availability</h3>
              <p class="text-gray-600 text-sm text-balance leading-relaxed">Let us know when you're free to work</p>
              <div class="mt-auto pt-6 flex items-center text-sm font-medium text-emerald-900">
                Set schedule
                <svg class="ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section id="testimonials" class="py-24 scroll-mt-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-[url('/img/testimonials-pattern.svg')] bg-repeat opacity-5"></div>
    <div class="relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-center text-gray-900 sm:text-4xl tracking-[-0.02em] text-balance">
          Hear from Our Healthcare Family
        </h2>
        <p class="mt-6 text-xl text-gray-600 text-center max-w-3xl mx-auto text-balance leading-relaxed">
          Join thousands of healthcare professionals who've found their perfect match with Tafara Care Services.
        </p>
        <div class="grid md:grid-cols-3 gap-8 mt-20">
          {testimonials.map((testimonial, index) => (
            <div class={`group relative overflow-hidden rounded-xl p-8 transition-all duration-300 hover:shadow-lg border border-zinc-200/60 hover:border-zinc-300/80 ${
              index === 0 ? 'bg-gradient-to-br from-purple-500/10 to-purple-900/5' :
              index === 1 ? 'bg-gradient-to-br from-blue-500/10 to-blue-900/5' :
              'bg-gradient-to-br from-emerald-500/10 to-emerald-900/5'
            }`}>
              <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-white/40 to-transparent rounded-bl-[6rem] -mr-8 -mt-8"></div>
              <div class="relative">
                <svg class={`h-8 w-8 mb-6 ${
                  index === 0 ? 'text-purple-900/30' :
                  index === 1 ? 'text-blue-900/30' :
                  'text-emerald-900/30'
                }`} fill="currentColor" viewBox="0 0 24 24">
                  <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
                </svg>
                <p class="text-lg mb-6 leading-relaxed text-gray-900 font-medium">"{testimonial.quote}"</p>
                <div class="flex items-center gap-3">
                  <div class={`h-10 w-10 rounded-full flex items-center justify-center ${
                    index === 0 ? 'bg-purple-100 text-purple-900' :
                    index === 1 ? 'bg-blue-100 text-blue-900' :
                    'bg-emerald-100 text-emerald-900'
                  }`}>
                    <span class="text-lg font-semibold">{testimonial.author[0]}</span>
                  </div>
                  <div>
                    <p class="font-medium text-sm text-gray-900">{testimonial.author.split(',')[0]}</p>
                    <p class="text-sm text-gray-500">{testimonial.author.split(',')[1]}</p>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 relative overflow-hidden">
    <div class="absolute inset-0 bg-[url('/img/cta-pattern.svg')] bg-repeat opacity-5"></div>
    <div class="relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-gradient-to-br from-purple-900 to-purple-800 rounded-2xl shadow-xl overflow-hidden">
          <div class="md:grid md:grid-cols-2 md:gap-10">
            <div class="p-12 lg:p-16 flex flex-col">
              <div class="inline-flex h-8 items-center justify-center rounded-full bg-purple-800/40 px-4 w-fit mb-8">
                <span class="text-sm font-medium text-purple-100 tracking-tight">Advance Your Healthcare Career</span>
              </div>
              <h2 class="text-3xl font-bold text-white sm:text-4xl tracking-[-0.02em] text-balance">
                Begin Your Journey with Tafara Care Services
              </h2>
              <p class="mt-6 text-lg text-purple-100 leading-relaxed">
                Take the next step in your professional development. Join our network of skilled healthcare practitioners and benefit from:
              </p>
              <ul class="mt-8 space-y-4">
                <li class="flex items-center text-purple-100">
                  <svg class="w-5 h-5 mr-3 text-purple-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7"/>
                  </svg>
                  Flexible scheduling with regular shift opportunities
                </li>
                <li class="flex items-center text-purple-100">
                  <svg class="w-5 h-5 mr-3 text-purple-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7"/>
                  </svg>
                  Competitive remuneration packages
                </li>
                <li class="flex items-center text-purple-100">
                  <svg class="w-5 h-5 mr-3 text-purple-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7"/>
                  </svg>
                  Comprehensive professional development
                </li>
              </ul>
              <div class="mt-12 flex flex-col sm:flex-row gap-4">
                <a href="#register" class="inline-flex h-12 items-center justify-center rounded-md bg-white px-6 text-base font-medium text-purple-900 hover:bg-purple-50 transition-colors group">
                  Start Registration
                  <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                  </svg>
                </a>
              </div>
              <p class="mt-6 text-sm font-medium text-purple-200">Professional support â€¢ Streamlined onboarding process</p>
            </div>
            <div class="relative hidden md:block">
              <div class="absolute inset-0 bg-gradient-to-r from-purple-900/90 to-transparent z-10"></div>
              <img src={placeholderImages.healthcareTeam} alt="Healthcare professionals at work" class="object-cover h-full w-full" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-24 bg-zinc-50/50 scroll-mt-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-[url('/img/contact-pattern.svg')] bg-repeat opacity-5"></div>
    <div class="relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-zinc-200/60">
          <div class="md:grid md:grid-cols-2 md:gap-10">
            <div class="p-12 lg:p-16">
              <h2 class="text-3xl font-bold text-gray-900 tracking-[-0.02em] text-balance">
                Get in Touch
              </h2>
              <p class="mt-6 text-lg text-gray-600 text-balance leading-relaxed">
                Have questions? We're here to help you take the next step in your healthcare career.
              </p>
              <div class="mt-12 space-y-8">
                <div>
                  <h3 class="text-base font-semibold text-gray-900 mb-3">Visit Us</h3>
                  <p class="text-gray-600 leading-relaxed">
                    2 Pinfold Street<br />
                    7th Floor<br />
                    Sheffield, S1 2GU<br />
                    United Kingdom
                  </p>
                </div>
                <div>
                  <h3 class="text-base font-semibold text-gray-900 mb-3">Contact</h3>
                  <a href="tel:03337720624" class="text-purple-900 hover:text-purple-700 block">0333 77 20624</a>
                  <a href="mailto:hr@tafaracareservices.com" class="text-purple-900 hover:text-purple-700">hr@tafaracareservices.com</a>
                </div>
                <div>
                  <h3 class="text-base font-semibold text-gray-900 mb-3">Office Hours</h3>
                  <p class="text-gray-600">Monday - Friday: 9:00 AM - 5:00 PM</p>
                </div>
              </div>
            </div>
            <div class="relative">
              <div class="absolute inset-0 bg-gradient-to-b from-transparent to-gray-900/20"></div>
              <img src={placeholderImages.office} alt="Tafara Care Services Office" class="object-cover h-full w-full" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-900 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
        <div>
          <img src="/logo-white.svg" alt="Tafara Care Services" class="h-8 mb-6" />
          <p class="text-gray-400 text-balance leading-relaxed">Empowering healthcare professionals across the UK with opportunities for growth and success.</p>
        </div>
        <div>
          <h3 class="font-semibold text-white mb-4 text-sm tracking-wider uppercase">Quick Links</h3>
          <ul class="space-y-3">
            <li><a href="#features" class="text-gray-400 hover:text-white transition-colors">Features</a></li>
            <li><a href="#testimonials" class="text-gray-400 hover:text-white transition-colors">Testimonials</a></li>
            <li><a href="#contact" class="text-gray-400 hover:text-white transition-colors">Contact</a></li>
          </ul>
        </div>
        <div>
          <h3 class="font-semibold text-white mb-4 text-sm tracking-wider uppercase">Resources</h3>
          <ul class="space-y-3">
            <li><a href="#training" class="text-gray-400 hover:text-white transition-colors">Training Calendar</a></li>
            <li><a href="#timesheet" class="text-gray-400 hover:text-white transition-colors">Submit Timesheet</a></li>
            <li><a href="#uniform" class="text-gray-400 hover:text-white transition-colors">Order Uniform</a></li>
          </ul>
